<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="mysql" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>Database.MySQL.Entities.MySQLTVDBIMDB</class>
        <class>Database.MySQL.Entities.MySQLOMDB</class>
        <class>Database.MySQL.Entities.MySQLTVDBSeries</class>
        <class>Database.MySQL.Entities.MySQLTVDBEpisode</class>
        <class>Database.MySQL.Entities.MySQLTVDBUpdate</class>
        <class>Database.MySQL.Entities.MySQLUpdateEpisode</class>
        <class>Database.MySQL.Entities.MySQLUpdateSeries</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/MYDB" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="minstlol" />
            <property name="hbm2ddl.auto" value="create" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
            <!-- Set to true when troubleshooting -->
            <property name="hibernate.bytecode.use_reflection_optimizer" value="false"/>
            <!-- Set to true when troubleshooting -->
            <property name="hibernate.format_sql" value="false"/>
            <!-- Set to true when troubleshooting -->
            <property name="hibernate.use_sql_comments" value="false"/>
        </properties>
    </persistence-unit>
</persistence>